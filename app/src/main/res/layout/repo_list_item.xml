<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_180"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="@dimen/size_5">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvreponame"
                android:padding="@dimen/size_5"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/medium_size_text"
                android:layout_marginLeft="@dimen/size_8"
                android:text="Repo Name"/>

            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvrepodesc"
                android:padding="@dimen/size_5"
                android:maxLines="3"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/small_size_text"
                android:layout_marginLeft="@dimen/size_8"
                android:text="Description"/>

            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvrepolang"
                android:padding="@dimen/size_5"
                android:layout_marginLeft="@dimen/size_8"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/small_size_text"
                android:text="Language"/>

            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvrepowatchers"
                android:padding="@dimen/size_5"
                android:layout_marginLeft="@dimen/size_8"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/small_size_text"
                android:text="Watchers"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
